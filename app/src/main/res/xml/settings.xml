<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="간편설정">
        <SwitchPreference
            android:title="자동밝기"
            android:summary="QR 및 바코드 출력 시 자동으로 밝기를 최대로 설정합니다"
            android:key="bright"
            android:defaultValue="true"
            />
        <SwitchPreference
            android:title="간편문진"
            android:summary="이상 없음에 맞추어 문진 항목이 미리 선택되어있도록 설정할 수 있습니다"
            android:key="simple"
            android:defaultValue="false"
            />
        <ListPreference
            android:entries="@array/barcodeType"
            android:entryValues="@array/barcodeType"
            android:key="barcodeType"
            android:title="바코드 종류"
            android:summary="기본으로 출력할 바코드 종류를 설정합니다"
            />
        <Preference
            android:title="초기화"
            android:summary="애플리케이션에 저장된 학번 및 문진 정보를 모두 초기화합니다"
            android:key="reset"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="Developer">
        <Preference
            android:key=""
            android:summary="본 애플리케이션은 경기대학교 윤익준 교수님의 모바일프로그래밍 강의 내 프로젝트 결과물입니다"
            />
        <Preference
            android:title="이재승"
            android:key=""
            android:summary="융합보안학과"
            />
        <Preference
            android:title="박한렬"
            android:key=""
            android:summary="컴퓨터공학부"
            />
        <Preference
            android:title="이건회"
            android:key=""
            android:summary="컴퓨터공학부"
            />
    </PreferenceCategory>
</PreferenceScreen>